// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = "mysql://root:coucou@db_project:3306/projects"
}

model Projet {
  id String @id @default(uuid())
  name String
  created_at DateTime @default(now())
  description String @db.VarChar(250)
  groupes Groupe[]
}

model Groupe {
  id String @id @default(uuid())
  name String
  project_id String
  created_at DateTime @default(now())
  project Projet @relation(fields: [project_id], references: [id])
  todos Todo[]
}

model Todo {
  id String @id @default(uuid())
  name String
  groupe_id String
  created_at DateTime @default(now())
  start_date DateTime @db.Date()
  end_date DateTime @db.Date()
  statut String
  groupe Groupe @relation(fields: [groupe_id], references: [id])
}